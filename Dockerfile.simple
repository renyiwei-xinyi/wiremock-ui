FROM node:18-alpine

WORKDIR /app

# 安装基础工具
RUN apk add --no-cache \
    git \
    bash

# 复制 package 文件
COPY package*.json ./

# 设置 npm 镜像源并安装依赖
RUN npm config set registry https://registry.npmmirror.com && \
    npm install --legacy-peer-deps

# 复制源代码
COPY src/ ./src/
COPY index.html ./
COPY vite.config.js ./

# 构建项目
RUN npm run build

# 暴露端口
EXPOSE 3000

# 启动命令
CMD ["npm", "start"]
